type User {
    id: ID! @id
    firstName: String!
    lastName: String!
    email: String! @unique
    username: String! @unique
    password: String!
    messages: [Message!]
    comments: [Comment!]
    communities: [Community!] @relation(name:"Users")
    ownerOf: [Community!] @relation(name:"Owner")
    posts: [Post!]
    createdAt: DateTime! @createdAt
}

type Community {
    id: ID! @id
    name: String! @unique
    category: String!
    slug: String!  @unique
    posts: [Post!]
    hasPosts: Boolean!
    hasMessages: Boolean!
    users: [User!] @relation(name:"Users")
    privacy: String!
    owner: User @relation(name:"Owner")
    createdAt: DateTime! @createdAt
    about: String!
}

type Post {
    id: ID! @id
    content: String!
    title: String!
    slug: String!
    community: Community!
    comments: [Comment!]
    postedBy: User!
    createdAt: DateTime! @createdAt
}

type Comment {
    id: ID! @id
    author: User!
    content: String!
    post: Post!
    createdAt: DateTime! @createdAt
}

type Message {
    id: ID! @id
    sender: User!
    recip: String!
    content: String!
    community: Community!
    createdAt: DateTime! @createdAt
}
